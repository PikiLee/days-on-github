{
  "name": "days-on-github",
  "version": "2.2.0",
  "private": true,
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20.16.0"
  },
  "scripts": {
    "dev": "run-p build:app:watch dev:next",
    "build": "run-s build:app build:next",
    "dev:next": "next dev",
    "build:next": "next build",
    "preview": "node .output/server/index.mjs",
    "lint": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "run-p build:app:watch vitest",
    "vitest": "vitest",
    "test:once": "run-s build:app vitest:once",
    "vitest:once": "vitest run",
    "dev:app": "vite",
    "build:app": "pnpm run build:css && pnpm run build:render",
    "build:app:watch": "pnpm run build:css:watch && pnpm run build:render:watch",
    "build:css": "tailwindcss -i ./src/index.css -o ./dist/output.css --minify",
    "build:render": "vite build --outDir dist/server --ssr src/render.tsx",
    "build:css:watch": "tailwindcss -i ./src/index.css -o ./dist/output.css --minify --watch",
    "build:render:watch": "vite build --outDir dist/server --ssr src/render.tsx --watch"
  },
  "dependencies": {
    "@sparticuz/chromium-min": "126",
    "@vercel/blob": "^0.23.4",
    "clsx": "^2.1.1",
    "next": "^14.2.5",
    "ofetch": "^1.3.4",
    "puppeteer-core": "22.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "winston": "^3.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.24.1",
    "@eslint-react/eslint-plugin": "^1.9.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.14.14",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "9.8.0",
    "eslint-plugin-format": "^0.1.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "jsdom": "^24.1.1",
    "npm-run-all2": "^6.2.2",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.7",
    "vite": "^5.3.5",
    "vitest": "^2.0.5"
  }
}
